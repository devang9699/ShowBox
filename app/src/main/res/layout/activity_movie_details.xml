<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineart1"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/posterDET"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:layout_margin="8dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="8dp"

          >

            <TextView
                android:id="@+id/titleDET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"

                android:text="Title:"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/yearDET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"

                android:layout_marginTop="5dp"
                android:text="Release Date:"
                android:textSize="17sp"
                android:textStyle="bold"

                />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/lineart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"

        >
        <TextView
            android:id="@+id/categoryDET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:text="Category:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ratingDET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"

            android:text="Rating:"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/runtimeDET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runtime:"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"

            />
        <TextView
            android:id="@+id/DirectedByDET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directed By:"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/actorsDET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actors:"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"

            />
        <TextView
            android:id="@+id/boxofficeDET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boxoffice:"
            android:textSize="18sp"

            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"

            />

    </LinearLayout>


</RelativeLayout>
